@require '~ws/theme/settings.styl'

.root
  display block

.nav
  display flex
  height beat(1.5)
  align-items center

.prev, .next
  display inline-block
  border-radius 100px
  text-decoration none
  box-sizing border-box
  line-height beat(1.4)
  height beat(1.4)

.prev
  composes color-dim from 'ws/theme/textures.styl'
  width beat(1.4)
  text-align center
  border 1px solid #ccc

.next
  padding-left beat(0.6)
  padding-right beat(0.6)
  border 1px solid lighten($link-color, 10%)

.spacer
  flex 1

.metadata
  composes font-size-0 from 'ws/theme/typography.styl'
  composes color-dim from 'ws/theme/textures.styl'
  margin-top beat(0.6)
  text-align center
  > em
    &::before
      content '“'
    &::after
      content '”'
